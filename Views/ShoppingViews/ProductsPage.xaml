<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITraining.Views.ShoppingViews.ProductViews"
             xmlns:viewModel="clr-namespace:MAUITraining.ViewModels.ProductViewModels"
             Title="ProductViews">
    <ContentPage.BindingContext>
        <viewModel:ProductViewModel></viewModel:ProductViewModel>
    </ContentPage.BindingContext>
    
    <Grid RowDefinitions="*,*" >
        <BoxView Grid.Row="1" BackgroundColor="AliceBlue">
        </BoxView>
        <Grid Grid.Row="1">
            <CollectionView ItemsSource="{Binding Products}">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid RowDefinitions=".6*,.4*">
                            <Image Source="{Binding ImageUrl}"/>
                            <Label Text="{Binding ProductName}"/>
                            <Grid Grid.Row="1" ColumnDefinitions=".3*,.3*,.4*">
                                <Label Text="{Binding Price}"/>
                                <Button Text="Add to Cart" Command="{Binding }"/>
                                
                            </Grid>

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>